{{# partial "header" }}
  <h1>Login</h1>
{{/partial}}
{{# partial "content" }}
    <div>
      <a href='/auth-twitter' id='twitter-login-btn'>
        <img src='/images/sign-in-with-twitter-gray.png' alt='Sign in with Twitter'/>
      </a>
    </div>

    <form id="login-form" class='form-horizontal' role='form' method='post' action='{{action}}'>
      <div class='form-group'>
        <label for='username' class='col-sm-2'>
          Email
        </label>
        <div class='col-sm-10'>
          <input type='text' name='username' class='form-control' id='username' value=''>
        </div>
      </div>
      <div class='form-group'>
        <label for='password' class='col-sm-2'>
          Password
        </label>
        <div class='col-sm-10'>
          <input type='password' name='password' class='form-control' id='password' value=''>
        </div>
      </div>
      <div class='form-group'>
        <div class="col-sm-offset-2 col-sm-10">
          <button type='submit' class='btn btn-primary'>Login</button>
          <a href="/forgot-password" class="btn btn-link">Forgot your password?</a>
        </div>
      </div>
      <input type='hidden' id='client_name' name='client_name' value='FormClient'/>
    </form>
{{/partial}}

{{> layout.html}}