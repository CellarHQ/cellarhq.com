{{# partial "header" }}
    <h1>Beer Management</h1>
{{/partial}}
{{# partial "content" }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <div class="block-title">
                    <h2>{{drink.name}}</h2>
                </div>

                {{#if drink.editable }}
                    <div class="row">
                        <div class="block-section">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <a href="/breweries/{{drink.organizationSlug}}/beers/{{drink.slug}}/edit"
                                       class="btn btn-effect-ripple  btn-primary pull-right"
                                       style="overflow: hidden; position: relative;">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}

                <div class="row">
                    {{#if drink.description}}
                        <div class="col-sm-5 col-md-5 cold-lg 5 pull-left">
                            <p class="lead"><strong>Description</strong></p>

                            <p>{{drink.description}}</p>
                        </div>

                    {{/if}}

                    <div class="list-group pull-right col-sm-5 col-md-5 cold-lg 5 ">
                        {{#if drink.style}}
                            <a href="javascript:void(0)" class="list-group-item">
                                <span class="badge">{{drink.style}}</span>
                                <h4 class="list-group-item-heading"><strong>Style</strong></h4>
                            </a>
                        {{/if}}
                        {{#if drink.availability}}
                            <a href="javascript:void(0)" class="list-group-item">
                                <span class="badge">{{drink.availability}}</span>
                                <h4 class="list-group-item-heading"><strong>Availability</strong></h4>
                            </a>
                        {{/if}}
                        {{#if drink.abv}}
                            <a href="javascript:void(0)" class="list-group-item">
                                <span class="badge">{{drink.abv}}%</span>
                                <h4 class="list-group-item-heading"><strong>ABV</strong></h4>
                            </a>
                        {{/if}}
                        {{#if drink.ibu}}
                            <a href="javascript:void(0)" class="list-group-item">
                                <span class="badge">{{drink.ibu}}</span>
                                <h4 class="list-group-item-heading"><strong>IBU</strong></h4>
                            </a>
                        {{/if}}
                        {{#if drink.srm}}
                            <a href="javascript:void(0)" class="list-group-item">
                                <span class="badge">{{drink.srm}}</span>
                                <h4 class="list-group-item-heading"><strong>SRM</strong></h4>
                            </a>
                        {{/if}}
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{drink.tradableBeers}}</span>
                            <h4 class="list-group-item-heading">Tradable Beers</h4>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{drink.cellaredBeers}}</span>
                            <h4 class="list-group-item-heading">Total in cellars</h4>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{drink.containedInCellars}}</span>
                            <h4 class="list-group-item-heading">Contained in cellars</h4>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.html}}
