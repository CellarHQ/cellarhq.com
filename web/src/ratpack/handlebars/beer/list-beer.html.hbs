{{# partial "header" }}
    <h1>Beer</h1>
{{/partial}}

{{# partial "content" }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <div class="dataTables_wrapper form-inline no-footer">
                    <div class="row">
                        <div class="col-sm-6 col-xs-7">
                            <form action="/beers" method="get" role="search">
                                <div class="input-group">
                                    <input type="search" name="search" class="form-control" placeholder="Search">
                                    <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                </div>
                            </form>
                        </div>
                        {{#if loggedIn}}
                            <a href="/beers/add" class="btn btn-primary pull-right">Add New Brewery</a>
                        {{/if}}
                    </div>

                    <table id="beer-table" class="table table-striped table-bordered table-vcenter dataTable no-footer">
                        <thead>
                        <tr>
                            <th>{{tableSort request field='beerName' title='Name'}}</th>
                            <th>{{tableSort request field='style' title='Style'}}</th>
                            <th>{{tableSort request field='availability' title='Availability'}}</th>
                            <th>{{tableSort request field='ibu' title='IBU'}}</th>
                            <th>{{tableSort request field='abv' title='ABV'}}</th>
                        </tr>
                        </thead>
                        <tbody>

                        {{#each drinks}}
                            <tr>
                                <td>
                                    <h4 class="no-padding no-margin">
                                        <strong><a href="/beers/{{slug}}">{{name}}</a></strong>
                                    </h4>
                                    <a class="text-info" href="/breweries/{{organizationSlug}}">{{organizationName}}</a>
                                </td>
                                <td>{{styleName}}</td>
                                <td>{{availability}}</td>
                                <td>{{ibu}}</td>
                                <td>{{abv}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-7 col-xs-12 clearfix">
                            <div class="dataTables_paginate paging_bootstrap">
                                {{#if shouldShowPagination}}
                                    {{>common/pagination}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.html}}
