{{# partial "header" }}
    <h1>Beer Management</h1>
{{/partial}}
{{# partial "content" }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <div class="block-title">
                    <h2>Edit Beer: {{drink.name}}</h2>
                </div>
                <form action="/breweries/{{drink.organizationSlug}}/beers/{{drink.slug}}" method="post" id="edit-beer-form" class="form-horizontal form-bordered">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Brewery</label>
                        <div class="col-md-6">
                            <p class="form-control-static">{{drink.organizationName}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-6">
                            <p class="form-control-static">{{drink.name}}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="style">Style</label>
                        <div class="col-md-6">
                            <input type="text" id="style" name="style" class="form-control typeahead" value="{{drink.styleName}}"/>
                        </div>
                        <input type="hidden" id="styleId" name="styleId" value="{{drink.styleId}}"/>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="glassware">Glassware</label>
                        <div class="col-md-6">
                            <input type="text" id="glassware" name="glassware" class="form-control typeahead" value="{{drink.glasswareName}}"/>
                        </div>
                        <input type="hidden" id="glasswareId" name="glasswareId" value="{{drink.glasswareId}}"/>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="description">Description</label>
                        <div class="col-md-6">
                            <textarea id="description" name="description" class="form-control">{{drink.description}}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="srm">SRM</label>
                        <div class="col-md-6">
                            <input type="text" id="srm" name="srm" class="form-control" value="{{drink.srm}}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="ibu">IBU</label>
                        <div class="col-md-6">
                            <input type="text" id="ibu" name="ibu" class="form-control" value="{{drink.ibu}}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="abv">ABV</label>
                        <div class="col-md-6">
                            <input type="text" id="abv" name="abv" class="form-control" value="{{drink.abv}}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="availability">Availability</label>
                        <div class="col-md-6">
                            <select class="form-control" id="availability" name="availability">
                                <option value="" selected>Unknown</option>
                                {{#each availability}}
                                    <option value="{{value}}" {{selectedOption drink "getAvailability" value}}>{{label}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-actions">
                        <div class="col-md-8 col-md-offset-3">
                            <button type="submit" class="btn btn-effect-ripple btn-primary">Submit</button>
                            <button type="reset" class="btn btn-effect-ripple btn-danger">Reset</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
{{/partial}}

{{# partial "extra_includes"}}
    <script src="/scripts/vendor/typeahead/typeahead.bundle.min.js"></script>
    <script src="/scripts/pages/beers.js"></script>
    <script>$(function () {
        Beer.init();
    });</script>
{{/partial}}

{{> layout.html}}
