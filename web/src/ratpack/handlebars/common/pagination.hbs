{{#pagination request currentPage totalPageCount 5}}
	<ul class="pagination">
      {{#if canGoPrevious}}
		  <li class="prev"><a href="{{previousUri}}">Prev</a></li>
      {{else}}
		  <li class="prev disabled"><a href="#">Prev</a></li>
      {{/if}}

      {{#each pages}}
        {{#if isCurrent}}
			<li class="active"><a href="#">{{page}}</a></li>
        {{else}}
			<li><a href="{{pageUri}}">{{page}}</a></li>
        {{/if}}
      {{/each}}

      {{#if canGoNext}}
		  <li class="next"><a href="{{nextUri}}">Next</a></li>
      {{else}}
		  <li class="next disabled"><a href="#">Next</a></li>
      {{/if}}
	</ul>
{{/pagination}}
