{{# partial "header" }}
    <h1>Brewery Management</h1>
{{/partial}}
{{# partial "content" }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <!-- Form Validation Title -->
                <div class="block-title">
                    <h2>{{organization.name}}</h2>
                </div>

                {{#if organization.editable }}
                    <div class="row">
                        <div class="block-section">
                            <div class="input-group">
                                <div class="input-group-btn">
                                    <a id="edit-brewery-button"
                                       href="/breweries/{{organization.slug}}/edit"
                                       class="btn btn-effect-ripple  btn-primary pull-right"
                                       style="overflow: hidden; position: relative;">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}

                <div class="row">
                    <div class="brewery-photo">
                        {{#if photo}}
                            <img class="img-thumbnail pull-left"
                                 src="{{photo.largeUrl}}"
                                 alt="{{drink.name}} photo"
                                 width="{{photo.thumbWidth}}"
                                 height="{{photo.thumbHeight}}"/>
                        {{else}}
                            <img class="img-thumbnail pull-left"
                                 src="/images/icon152.png" alt="no photo"/>
                        {{/if}}
                    </div>

                    {{#if organization.description}}
                        <p class="lead"><strong>Description</strong></p>

                        <p>{{organization.description}}</p>

                    {{/if}}
                </div>
                <div class="row">
                    <div class="pull-left">
                        <address>
                            {{organization.address}}<br/>
                            {{#if organization.address2}}
                                {{organization.address2}}<br/>
                            {{/if}}
                            {{locality}}{{#if region}}{{#if locality}}
                            ,{{/if}} {{region}}{{/if}} {{organization.postalcode}} {{country}}<br/>
                            {{#if organization.phone}}<i class="gi gi-phone_alt text-info"></i> {{organization.phone}}
                                <br/>{{/if}}
                            {{#if organization.website}}
                                <i class="hi hi-link text-info">
                                    <a target="_blank" href="{{organization.website}}">{{organization.website}}</a>
                                </i>
                            {{/if}}
                        </address>
                    </div>
                    <div class="list-group col-sm-5 col-md-5 cold-lg-5 pull-right">
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{organization.totalBeers}}</span>
                            <h4 class="list-group-item-heading">Beers</h4>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{organization.cellaredBeers}}</span>
                            <h4 class="list-group-item-heading">Total in cellars</h4>
                        </a>
                        <a href="javascript:void(0)" class="list-group-item">
                            <span class="badge">{{organization.containedInCellars}}</span>
                            <h4 class="list-group-item-heading"># Of Cellars</h4>
                        </a>
                    </div>
                </div>
                <div class="row">
                    {{#if loggedIn}}
                            <div class="block-section">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <a href="/breweries/{{organization.slug}}/beers/add"
                                           class="btn btn-effect-ripple  btn-primary pull-right"
                                           style="overflow: hidden; position: relative;">Add New Beer</a>
                                    </div>
                                </div>
                            </div>
                    {{/if}}

                    <div class="table-responsive">
                        <table id="beer-table" class="table table-striped table-bordered table-condensed table-vcenter">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Style</th>
                                <th>Availability</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each drinks}}
                                <tr>
                                    <td><a href="/breweries/{{organization.slug}}/beers/{{slug}}">{{drink}}</a></td>
                                    <td>{{style}}</td>
                                    <td>{{availability}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.html}}
