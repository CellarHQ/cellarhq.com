{{# partial "header" }}
  <h1>Brewery Management</h1>
{{/partial}}
{{# partial "content" }}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <!-- Form Validation Title -->
                <div class="block-title">
                    <h2>{{organization.name}}</h2>
                </div>

                {{#if organization.editable }}
                <div class="row">
                    <a href="/breweries/{{organization.slug}}/edit" class="btn btn-primary pull-right">Edit</a>
                </div>
                {{/if}}

                {{#if organization.description}}
                    <div class="row">
                        <p class="lead"><strong>Description</strong></p>
                        <p>{{organization.description}}</p>
                    </div>
                {{/if}}

                <div class="row">
                    <div class="col-sm-6">
                        <address>
                            {{organization.address}}<br/>
                            {{#if organization.address2}}
                                {{organization.address2}}<br/>
                            {{/if}}
                            {{locality}}{{#if region}}{{#if locality}},{{/if}} {{region}}{{/if}} {{organization.postalcode}} {{country}}<br/>
                            {{#if organization.phone}}<i class="gi gi-phone_alt text-info"></i> {{organization.phone}}<br/>{{/if}}
                            {{#if organization.website}}
                                <i class="hi hi-link text-info">
                                    <a target="_blank"  href="{{organization.website}}">{{organization.website}}</a>
                                </i>
                            {{/if}}
                        </address>
                    </div>
                    <div class="col-sm-4">
                        <div class="text-center">
                            <img src="http://cdn-storage-www.cellarhq.com/brewery/surly-brewing-company/surly-brewing-company-5e12d-166x168.png"
                                 alt="avatar" class="img-thumbnail">

                            <h3 class="widget-heading"><i class="gi gi-beer text-info"></i> <br>
                                <small>{{drinks.size}}</small>
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="content-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="header-section">
                                <h1>Beers</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="table-responsive">
                        <table id="beer-table" class="table table-striped table-bordered table-condensed table-vcenter">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Style</th>
                                <th>Availability</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each drinks}}
                                <tr>
                                    <td><a href="/beers/{{slug}}">{{drink}}</a></td>
                                    <td>{{style}}</td>
                                    <td>{{availability}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.html}}
