{{# partial "header" }}
  <h1>Breweries</h1>
{{/partial}}

{{# partial "content" }}
    <div class="block full">
        <div class="row">
            <div class="input-group col-md-6">
                <form action="/breweries" method="get" role="search">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-effect-ripple btn-primary">
                        <i class="fa fa-search"></i> Search
                    </button>
                </span>
                <input type="text" id="search" name="search" class="form-control" placeholder="Brewery">
                </form>
            </div>
            {{#if loggedIn}}
                <a href="/breweries/add" class="btn btn-primary pull-right">Add New Brewery</a>
            {{/if}}
        </div>

        <div class="row">
            <div class="table-responsive">

                <table id="breweries-table" class="table table-striped table-bordered table-condensed table-vcenter">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Established</th>
                        <th>Website</th>
                    </tr>
                    </thead>
                    <tbody>

                    {{#each organizations}}
                        <tr>
                            <td><a href='/breweries/{{slug}}'>{{name}}</a></td>
                            <td>{{locality}}{{#if region}}{{#if locality}},{{/if}} {{region}}{{/if}}{{#if country}}
                                / {{country}}{{/if}} </td>
                            <td>{{established}}</td>
                            <td><a target="_blank" href="{{website}}">{{website}}</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                {{>common/pagination}}

            </div>
        </div>
    </div>
{{/partial}}

{{> layout.html}}