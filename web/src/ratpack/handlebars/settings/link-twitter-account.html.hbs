{{#partial "header"}}
    <h1>Link a Twitter Account</h1>
{{/partial}}
{{#partial "content"}}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <div class="block">
                <form id="link-email-form" class="form-horizontal" role="form" method="post" action="/settings/link-twitter">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="username">Twitter Username</label>
                        <div class="col-sm-10">
                            <input type="text" name="username" class="form-control" id="username"/>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 30px">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Link Account</button>
                            <a href="/settings" class="btn btn-link">cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{#partial "extra_includes"}}
    <script src="/scripts/pages/link-email-account.js"></script>
    <script>$(function(){ LinkEmailAccount.init(); });</script>
{{/partial}}

{{> layout.html}}
