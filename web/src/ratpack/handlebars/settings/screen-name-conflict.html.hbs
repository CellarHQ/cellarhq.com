{{#partial "header"}}
	<h1>Choose a New Screen Name</h1>
{{/partial}}
{{#partial "content"}}
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
			<div class="block">
				<div class="alert alert-info">
					<p><strong>Screen name is already taken.</strong> Unfortuntely, your Twitter name is already being
						used by another Cellar. You can choose a new one below to finish your registration
						process.</p>
                  {{#if conflict}}
					  <p>If you are the owner of <a href="/cellars/{{conflict}}">this cellar</a>, then you should login
						  with your email instead. You will have the ability to link your Twitter account soon.</p>
                  {{/if}}
				</div>
				<form id="screen-name-conflict-form" class="form-horizontal" role="form" method="post"
				      action="/settings/screen-name-conflict">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="screenName">Screen Name</label>

						<div class="col-sm-10">
							<input type="text" name="screenName" class="form-control" id="screenName"/>
						</div>
					</div>
					<div class="form-group" style="margin-top: 30px">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" class="btn btn-primary">Choose new Screen Name</button>
							<a href="/logout" class="btn btn-link">cancel</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{{/partial}}
{{#partial "extra_includes"}}
	<script src="/scripts/pages/screen-name-conflict.js"></script>
	<script>$(function () {
		ScreenNameConflict.init();
	});</script>
{{/partial}}

{{> layout.html}}
