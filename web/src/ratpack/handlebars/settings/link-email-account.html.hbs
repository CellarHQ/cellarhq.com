{{#partial "header"}}
	<h1>Link an Email Account</h1>
{{/partial}}
{{#partial "content"}}
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
			<div class="block">
				<div class="alert alert-info">
					<p><strong>Link an email address to your Cellar.</strong> You can link unclaimed email addresses to
						your cellar. To do so, once you've entered your email address below, we'll send you an email to
						verify your account. After clicking the link inside, the email will be attached and you'll be
						able to login with it.</p>
				</div>
				<form id="link-email-form" class="form-horizontal" role="form" method="post"
				      action="/settings/link-email">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="email">Email</label>

						<div class="col-sm-10">
							<input type="text" name="email" class="form-control" id="email"/>
						</div>
					</div>
					<div class="form-group" style="margin-top: 30px">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" class="btn btn-primary">Send Verification Email</button>
							<a href="/settings" class="btn btn-link">cancel</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{{/partial}}
{{#partial "extra_includes"}}
	<script src="/scripts/pages/link-email-account.js"></script>
	<script>$(function () {
		LinkEmailAccount.init();
	});</script>
{{/partial}}

{{> layout.html}}
